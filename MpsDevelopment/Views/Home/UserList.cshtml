@model ICollection<UserViewModel>
@{
    ViewData["Title"] = "EmployeeList";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Kullanıcı Listesi</h1>

    <div class="card mb-4">
        <div class="card-body row">
            <div class="col-7">

                Bu Sayfada Kullanıcılarla ile ilgili işlemler Yapılmaktadır
            </div>
            <a asp-action="AddUser" asp-controller="Home" class="btn btn-primary col-3 offset-2">
                Kullanıcı  Ekle
            </a>
        </div>

        @if (TempData["Message"]!=null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["Message"]
            </div>
        }
    </div>
    @if (Model.Count> 0)
    {


        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable Example
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Kullanı Adı</th>
                            <th>Email </th>
                            <th>Şfiresi </th>
                            <th>Kullanıcı Güncelleme</th>
                            <th>Rol Atama</th>
                            <th>Kullanıcı Sil</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.UserName </td>
                          
                                <td>@item.Email </td>
                                <td>@item.PasswordBackUp</td>

                                <td>
                                    <a class="btn btn-primary" asp-route-UserId="@item.Id" asp-action="ModifiedUser" asp-controller="Home">Güncelle</a>
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-route-UserId="@item.Id" asp-action="AssignRoleToUser" asp-controller="Home">Yetkilendir</a>
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-route-UserId="@item.Id" asp-action="" asp-controller="Home">Sil</a>
                                </td>
                            </tr>
                        }


                    </tbody>

                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>


    }
    else
    {
        <div class="alert alert-danger">
            <h2>
                Henüz bir Kullanıcı Eklenmemiştir
            </h2>
        </div>
    }

</div>


