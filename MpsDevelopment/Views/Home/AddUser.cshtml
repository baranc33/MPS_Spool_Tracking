@model UserSaveViewModel

@{
    ViewData["Title"] = "AddUser";
}

<h1>AddUser</h1>



<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Kullanıcı Kayıt Formu </h3>


                        @if (TempData["ErrorMessage"]!=null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <form  asp-controller="Home" asp-action="AddUser" method="post">

                            <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                            </div>
                            <div class="row">
                                <div class="col-md-5 mb-4">

                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="UserName" class="form-label" for="firstName"></label>
                                        <input asp-for="UserName" type="text" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>

                                </div>
                                <div class="col-md-7 mb-4">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Email" class="form-label" for="firstName"></label>
                                        <input asp-for="Email" type="email" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                </div>


                                <div class="col-md-6 mb-4">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Password" class="form-label" for="firstName"></label>
                                        <input asp-for="Password" type="password" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="PasswordConfirm" class="form-label" for="firstName"></label>
                                        <input asp-for="PasswordConfirm" type="password" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                    </div>

                                </div>

                            </div>

                     

                            <div class="mt-4 pt-2">
                                <button data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Submit">
                                    Kaydet
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

