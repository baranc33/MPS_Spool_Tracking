<!DOCTYPE html>
<html lang="en">
<head>



    @await Html.PartialAsync("_CssPartial")
    @await RenderSectionAsync("CSS", false);


   
</head>
<body class="sb-nav-fixed">






    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-action="" asp-controller="">Kalaycı Denizcilik </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Proje Ara" aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar-->



        <!-- Bildirim Yeri-->
         <div>
            @if (TempData["notification"] !=null)
            {
                <a asp-action="notification" asp-controller="Home" asp-area="Admin" style="text-decoration:none;">
                    <i class="fas fa-bell" style="color: #ff0000;"></i>
                    <sup style="color: #ff0000;"> @TempData["notificationCount"] </sup>
                </a>
            }
        </div> 
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">

                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                    @User.Identity.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Profil Düzenle</a></li>
                    <li><a class="dropdown-item" href="#!">Talep Oluştur</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="LogOut">Çıkış Yap</a></li>
                </ul>
            </li>
        </ul>
    </nav>


























    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            @await Html.PartialAsync("_LayoutSideBarNav");
        </div>


        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2025</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>


    @await Html.PartialAsync("_JsPartial");
    @await RenderSectionAsync("Scripts", required: false)

</body>
<
</html>
